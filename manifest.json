{
    "manifest_version": 3,
    "name": "Invert colors",
    "description": "Invert page colors, to reduce eye strain in low light conditions",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab", "scripting", "storage", "history", "tabs"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
      ],
    "action": {
        "default_icon": {
            "16": "/images/day-and-night16.png",
            "32": "/images/day-and-night32.png",
            "128": "/images/day-and-night128.png"
        }
    },
    "icons": {
        "16": "/images/day-and-night16.png",
        "32": "/images/day-and-night32.png",
        "128": "/images/day-and-night128.png"
    }
  }